{
  "name": "@saninn/capacitor-plugin-restart",
  "version": "0.0.1",
  "description": "This plugin will restart your app completely",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java,kotlin}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "author": "Saninn Salas Diaz (www.saninnsalas.com)",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^2.4.4",
    "@capacitor/core": "^2.4.4",
    "@capacitor/ios": "^2.4.4",
    "@ionic/prettier-config": "^1.0.0",
    "@ionic/swiftlint-config": "^1.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^0.8.0",
    "prettier-plugin-kotlin": "^2.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.21.0",
    "swiftlint": "^1.0.1",
    "typescript": "~3.8.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^2.4.4"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "SaninnCapacitorPluginRestart.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/distante/capacitor-plugin-restart"
  },
  "bugs": {
    "url": "https://github.com/distante/capacitor-plugin-restart/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,css,html,ts,js,java,kotlin,json}": "prettier --write"
  }
}
